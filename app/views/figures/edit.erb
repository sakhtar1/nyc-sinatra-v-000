<h2> Figures </h2>

    <form action="/figures/<%=@figure.id%>" method="POST" >

      <h3><label>Figure Name:</label></h3>
        <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></p><br>

        <h3><label>Title:</label></h3>
       <% Title.all.each do |title| %>
         <label><%= title.name %></label>
         <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"<%='checked' if @figure.titles.include?(title) %>><br>
        <% end %>

    <h3><label>New Title:</label></h3>
        <input type="text" id="new_title" name="title[name]">

     <h3><label>Figure Landmark:</label></h3>
     <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark) %>><br>
     <% end %>

        

     <h3><label>New Landmark:</label></h3>
       <input type="text" id="new_landmark" name="landmark[name]"><br>

       <input type="text" name="landmark[year_completed]">


       <input type="submit" value="Edit Figure">
</form>
